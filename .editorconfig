# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,,lua,toml,yml,yaml,json,graphql}]
indent_style = space
indent_size = 2

[{go.mod,*.go,Makefile}]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
